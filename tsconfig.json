{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",  
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
   
  },
  "exclude": [
    "node_modules"
  ]
}
